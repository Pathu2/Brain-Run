<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#feeeee"
    tools:context=".gifts"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="160dp"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/gi2"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdgeLength="5dp"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gi11"
                    android:gravity="top"
                    android:elevation="5dp"
                    android:buttonTint="#dd0a0a"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gi12"
                    android:gravity="top"
                    android:elevation="5dp"
                    android:buttonTint="#dd0a0a"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gi13"
                    android:gravity="top"
                    android:elevation="5dp"
                    android:buttonTint="#dd0a0a"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gi14"
                    android:gravity="top"
                    android:elevation="5dp"
                    android:buttonTint="#dd0a0a"
                    android:layout_marginBottom="10dp"/>

            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardView1"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_centerHorizontal="true">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">


            <ImageView
                android:layout_width="280dp"
                android:layout_height="160dp"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/gi1" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdgeLength="5dp"
            android:padding="5dp">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gi21"
                android:gravity="top"
                android:textSize="16sp"
                android:elevation="5dp"
                android:buttonTint="#dd0a0a"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gi22"
                android:gravity="top"
                android:textSize="16sp"
                android:elevation="5dp"
                android:buttonTint="#dd0a0a"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gi23"
                android:gravity="top"
                android:textSize="16sp"
                android:elevation="5dp"
                android:buttonTint="#dd0a0a"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gi24"
                android:gravity="top"
                android:textSize="16sp"
                android:elevation="5dp"
                android:buttonTint="#dd0a0a"
                android:layout_marginBottom="10dp"/>

        </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardView2"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_centerHorizontal="true">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">


            <ImageView
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/gi3" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdgeLength="5dp"
                android:padding="5dp">

                <RadioButton

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gi31"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:elevation="5dp"
                    android:buttonTint="#dd0a0a"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/radioButton03"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gi32"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:elevation="5dp"
                    android:buttonTint="#dd0a0a"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gi33"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:elevation="5dp"
                    android:buttonTint="#dd0a0a"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gi34"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:elevation="5dp"
                    android:buttonTint="#dd0a0a"
                    android:layout_marginBottom="10dp"/>

            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sub"
        android:padding="2dp"
        android:text="Submit"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/gradient_button"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:layout_toRightOf="@id/timer"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relative_layout"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="move1"
        android:padding="2dp"
        android:text="next"
        android:textColor="#fff"
        android:textSize="12sp"
        android:background="@drawable/gradient_button"
        android:layout_toRightOf="@id/timer"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relative_layout"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="move"
        android:padding="2dp"
        android:text="Back"
        android:textColor="#fff"
        android:textSize="12sp"
        android:visibility="visible"
        android:background="@drawable/gradient_button"
        android:layout_toLeftOf="@id/timer"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relative_layout"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="4dp"
        android:text="00"
        android:textColor="#dd0a0a"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/play_button"
        android:layout_below="@id/relative_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>