<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#feeeee"
    tools:context=".sunday1"
    android:padding="30dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="4dp"
        android:visibility="visible"
        app:cardBackgroundColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton26"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p1"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="#feeeee" />
                    <RadioButton
                        android:id="@+id/radioButton27"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p2"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:background="#feeeee" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton28"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p3"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="#feeeee" />
                    <RadioButton
                        android:id="@+id/radioButton29"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p4"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                </LinearLayout>

            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:id="@+id/cardView1"
            android:layout_marginTop="50dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        app:cardBackgroundColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p11"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="#feeeee" />
                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p12"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:background="#feeeee" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p13"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="#feeeee" />
                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p14"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:id="@+id/cardView2"
            android:layout_marginTop="50dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="4dp"
        app:cardBackgroundColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p21"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="#feeeee" />
                    <RadioButton
                        android:id="@+id/radioButton6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p22"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                </TableRow>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:background="#feeeee" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton7"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p23"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="#feeeee" />
                    <RadioButton
                        android:id="@+id/radioButton8"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/p24"
                        android:gravity="top"
                        android:buttonTint="#dd0a0a"
                        android:elevation="5dp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sub"
        android:padding="2dp"
        android:text="Submit"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:background="@drawable/gradient_button"
        android:layout_toRightOf="@id/timer"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relative_layout"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="move1"
        android:padding="2dp"
        android:text="next"
        android:textColor="#fff"
        android:textSize="12sp"
        android:background="@drawable/gradient_button"
        android:layout_toRightOf="@id/timer"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relative_layout"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="move"
        android:padding="2dp"
        android:text="Back"
        android:textColor="#fff"
        android:textSize="12sp"
        android:visibility="visible"
        android:background="@drawable/gradient_button"
        android:layout_toLeftOf="@id/timer"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/relative_layout" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="4dp"
        android:text="00"
        android:textColor="#dd0a0a"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/play_button"
        android:layout_below="@id/relative_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>